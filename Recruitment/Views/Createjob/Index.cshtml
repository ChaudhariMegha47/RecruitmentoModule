@using Recruitment.Models.Entities
@model CreatejobRequest


@{
    ViewData["Title"] = "Create Job";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    #tblData{
        width: 1152.422px !important;
    }
</style>
<div class="row">
    <div class="col-md-6">
        <h2>Job List</h2>
    </div>
    <div class="col-md-6">
        <a id="addjobBtn" data-bs-toggle="modal" class="btn btn-outline-primary btn-round" style="float:right">Add Job</a>
    </div>
</div>
<br></br>

<section class="basic-elements">
    <div class="row">
        <div class="col-md-12">
            <div class="card-outline-primary">
                <div class="card-block card-dashboard">
                    <div id="cardsContainer" class="row">
                        <!-- Dynamic Cards will be rendered here -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

@section Scripts {
    <script src="@Href("~/js/ckeditor.js")"></script>
    <script src="@Href("~/js/Pages/Createjob.js")"></script>
    <script src="@Href("~/js/ckeditor.js")"></script>
    <script src="~/jquery.js"></script>
    <script src="~/ckeditor.js"></script>
    <script src="~/adapters/jquery.js"></script>
    <!-- Modal -->
    <div class="modal fade" id="addjobModal" tabindex="-1" aria-labelledby="addjobModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addjobModalLabel">@ViewData["Title"] Createjob</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="card-body">
                        <form id="form">
                        <div class="row g-4">
                            <div class="col-lg-6">
                                <div>
                                    <label for="job-title-Input" class="form-label" asp-for="Title">Job Title <span class="text-danger">*</span></label>
                                        <input type="text" class="form-control" id="Title" name="Title" placeholder="Enter job title" required="">
                                        <span class="text-danger" id="jobError"></span>
                                  @*   <div class="valid-feedback">
                                        Looks good!
                                    </div> *@
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div>
                                    <label for="job-position-Input" class="form-label" asp-for="Jobposition">Job Position <span class="text-danger">*</span></label>
                                        <input type="text" class="form-control" id="Jobposition" name="Jobposition" placeholder="Enter job position" required="">
                                   @*  <div class="valid-feedback">
                                        Looks good!
                                    </div> *@
                                        <span class="text-danger" id="jobpositionError"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label" asp-for="qualification">Qualification</label>
                                <select id="qualification" name="qualification" class="form-control">
                                        <option value="">Select Qualification</option>
                                </select>
                               @*  <div class="valid-feedback">
                                    Looks good!
                                </div> *@
                                <span class="text-danger" id="qualificationError"></span>
                            </div>
                            <div class="col-lg-6">
                                <div>
                                    <label for="job-type-Input" class="form-label" asp-for="Jobtype">Job Type <span class="text-danger">*</span></label>
                                        <select class="form-control" data-choices="" id="Jobtype" name="Jobtype"  required="">
                                        <option value="">Select job type</option>
                                        <option value="Full Time">Full Time</option>
                                        <option value="Part Time">Part Time</option>
                                        <option value="Freelance">Freelance</option>
                                        <option value="Intership">Intership</option>
                                    </select>
                                  @*   <div class="valid-feedback">
                                        Looks good!
                                    </div> *@
                                        <span class="text-danger" id="jobtypeError"></span>
                                </div>
                            </div>

                            <div class="col-lg-12">
                                <div>
                                    <label for="description-field" class="form-label" asp-for="Jobdescription">Description <span class="text-danger">*</span></label>
                                        <textarea class="form-control" id="Jobdescription" rows="3" name="Jobdescription" placeholder="Enter description" required=""></textarea>
                                   @*  <div class="valid-feedback">
                                        Looks good!
                                    </div> *@
                                        <span class="text-danger" id="jobdescError"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div>
                                    <label for="vancancy-Input" class="form-label" asp-for="Vacancies">No. of Vancancy <span class="text-danger">*</span></label>
                                        <input type="number" class="form-control" id="Vacancies" name="Vacancies" placeholder="No. of vancancy" required="">
                                  @*   <div class="valid-feedback">
                                        Looks good!
                                    </div> *@
                                        <span class="text-danger" id="vacanciesError"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label" asp-for="Experience">Experience</label>
                                <select id="Experience" name="Experience" class="form-control">
                                        <option value="">Select Experience</option>
                                </select>
                               @*  <div class="valid-feedback">
                                    Looks good!
                                </div> *@
                                <span class="text-danger" id="experienceError"></span>
                            </div>

                            <div class="col-lg-6">
                                <div>
                                    <label for="last-apply-date-Input" class="form-label" asp-for="Validupto">Last Date of Apply <span class="text-danger">*</span></label>
                                        <input type="date" class="form-control" id="Validupto" name="Validupto" data-provider="flatpickr" data-date-format="d M, Y" placeholder="Select date" required="">
                                   @*  <div class="valid-feedback">
                                        Looks good!
                                    </div> *@
                                        <span class="text-danger" id="validuptoError"></span>
                                </div>
                            </div>

                            <div class="col-lg-6">
                                <div>
                                    <label for="close-date-Input" class="form-label" asp-for="Createddate">Created Date <span class="text-danger">*</span></label>
                                        <input type="datetime-local" class="form-control" id="Createddate" name="Createddate" data-provider="flatpickr" data-date-format="d M, Y" placeholder="" required="">
                                 @*    <div class="valid-feedback">
                                        Looks good!
                                    </div> *@
                                        <span class="text-danger" id="createddateError"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div>
                                    <label for="start-salary-Input" class="form-label" asp-for="StartSalary">Start Salary</label>
                                        <input type="number" class="form-control" id="StartSalary" name="StartSalary" placeholder="Enter start salary" required="">
                                  @*   <div class="valid-feedback">
                                        Looks good!
                                    </div> *@
                                        <span class="text-danger" id="StartSalaryError"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div>
                                    <label for="last-salary-Input" class="form-label" asp-for="EndSalary">Last Salary</label>
                                        <input type="number" class="form-control" id="EndSalary" name="EndSalary" placeholder="Enter end salary" required="">
                                 @*    <div class="valid-feedback">
                                        Looks good!
                                    </div> *@
                                        <span class="text-danger" id="EndSalaryError"></span>
                                </div>
                            </div>

                         @*    <div class="col-md-6">
                                <div>
                                    <label for="country-Input" class="form-label">Country <span class="text-danger"></span></label>
                                    <input type="text" class="form-control" id="country-Input" placeholder="Enter country" required="">
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div>
                                    <label for="city-Input" class="form-label">State <span class="text-danger"></span></label>
                                    <input type="text" class="form-control" id="city-Input" placeholder="Enter city" required="">
                                </div>
                            </div> *@

                         @*    <div class="col-lg-12">
                                <div>
                                    <label for="website-field" class="form-label">Tags</label>
                                    <input class="form-control" id="choices-text-unique-values" data-choices="" data-choices-text-unique-true="" type="text" value="Design, Remote" required="">
                                </div>
                            </div> *@
                        </div>
                        </form>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn grey btn-outline-secondary btn-round" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-outline-primary btn-round" id="btnMdlSave">Save</button>
                </div>
            </div>
        </div>
    </div>


    <div class="modal fade" id="addDetailModal" tabindex="-1" aria-labelledby="addDetailModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-body">
                    <div class="card">
                        <div class="card-body">
                            <form id="form">
                                @Html.AntiForgeryToken()
                                <input type="hidden" id="JobId" name="JobId" />
                                <div class="row mb-3">
                                    <div class="col-sm-12">
                                        <label class="form-label" asp-for="Jobdescription">JobDescription :</label>
                                        <textarea class="form-control editor" id="Jobdescription" name="Jobdescription" rows="2"></textarea>
                                        <span class="text-danger" id="jobdescError"></span>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn grey btn-outline-secondary btn-round" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
}
